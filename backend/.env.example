# ================================
# StandUpStrip Backend Environment Variables
# ================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ================================
# Database Deployment Mode
# ================================
# Set to "cloud" for Neon DB or "local" for local PostgreSQL
DB_STATUS=local

# ================================
# Cloud Database Configuration (Neon DB)
# ================================
# Get these from: https://console.neon.tech/
# Format: jdbc:postgresql://<host>:<port>/<database>?sslmode=require
CLOUD_DATABASE_URL=jdbc:postgresql://your-neon-host.aws.neon.tech:5432/standup?sslmode=require
CLOUD_DATABASE_USERNAME=your_neon_username
CLOUD_DATABASE_PASSWORD=your_neon_password

# ================================
# Local Database Configuration
# ================================
LOCAL_DATABASE_URL=jdbc:postgresql://localhost:5432/standupdb
LOCAL_DATABASE_USERNAME=postgres
LOCAL_DATABASE_PASSWORD=your_local_password

# ================================
# JWT Configuration
# ================================
# Must be at least 32 characters (256 bits) for HS256
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRATION=86400000

# ================================
# Gemini AI Configuration
# ================================
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-3-flash-preview

# ================================
# Server Configuration (Optional)
# ================================
SERVER_PORT=8080

# ================================
# Logging (Optional)
# ================================
LOG_LEVEL=DEBUG
SECURITY_LOG_LEVEL=DEBUG

# ================================
# Gmail SMTP Configuration (LOCAL ONLY)
# ================================
# Note: Gmail SMTP is blocked on Render free tier
# Use Resend for cloud deployments
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=xxxx_xxxx_xxxx_xxxx

# ================================
# Resend Email API (RECOMMENDED FOR CLOUD)
# ================================
# Get API key from: https://resend.com
# Free tier: 3,000 emails/month
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=onboarding@resend.dev

# ================================
# Frontend URL (for email links)
# ================================
FRONTEND_URL=http://localhost:3000

# ================================
# CORS Allowed Origins
# ================================
# Comma-separated list of allowed origins for CORS
# Local: http://localhost:3000,http://localhost:3001,http://localhost:5173
# Production: Add your Vercel/Netlify frontend URL
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
